{% extends 'base.html.twig' %}

{% block title %}Caméléon Solutions
{% endblock %}

{% block meta_description %}
	<meta name="description" content="Bienvenue chez Caméléon Solutions, votre expert en création de sites web et formation aux outils numériques. Donnons vie ensemble à vos projets digitaux sur mesure.">
{% endblock %}

{% block meta_keywords %}
	<meta name="keywords" content="création de sites web, formation numérique, solutions digitales, développement personnalisé, projet digital">
{% endblock %}

{% block body %}

	<div class="hero-section">
		<div class="custom-navbar">
			{% include "shared/_navbar.html.twig" with {'navbarClass': 'navbar-transparent'} %}
		</div>
		{% include "home/tree.html.twig" %}
		<div class="effect-container">
			{% include "home/typing.html.twig" %}
		</div>
	</div>

	<div class="container-fluid">
		{% include "home/project.html.twig" %}
	</div>
	<div class="container-fluid reveal ">
		<div class="container-services">
			<h3 class="title-service">Mes services</h3>
			{% include "services/listing.html.twig" %}
			<div class="pdf-download-container">
				<h4>Consultez notre brochure PDF</h4>
				<p>Pour profiter pleinement des fonctionnalités interactives, ouvrez le PDF dans une application dédiée comme Adobe Acrobat Reader.</p>
				<a href="/PDF/Catalogue.pdf" target="_blank" class="btn-pdf">Ouvrir le PDF</a>
				<a href="/PDF/Catalogue.pdf" download class="btn-pdf">Télécharger le PDF</a>
			</div>


			{% include "services/picto.html.twig" %}
		</div>
	</div>

	<div class="container-fluid reveal">
		<div class="container-services">
			<h3 class="title-service">mes réalisations</h3>
			{% include 'project/realisations.html.twig' with {'project': projects} %}
		</div>
	</div>

	<div class="container-fluid reveal ">
		<div class="container-services">
			{% include "shared/_contact_section.html.twig" %}
		</div>
	</div>
{% endblock %}
{% block importmap %}
	{# do NOT call parent() #}

	{{ importmap(['app', 'fadeIn', 'homepage', 'popup']) }}
{% endblock %}
