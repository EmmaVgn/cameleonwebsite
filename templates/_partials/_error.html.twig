{% extends "base.html.twig" %}

{% block title %}
	{{ 'error.title'|trans }}
{% endblock %}

{% block body %}
	<section class="section error-404 min-vh-100 d-flex flex-column align-items-center justify-content-center">
		<h1>{{ exception.statusCode }}</h1>
		<h2>{{ exception.statusText }}</h2>
		<a class="btn" href="{{ path('homepage') }}">{{ 'error.return_home'|trans }}</a>
		<img src="{{ asset('img/not-found.svg') }}" class="img-fluid py-5" alt="{{ 'error.not_found_image_alt'|trans }}">
	</section>
{% endblock %}
