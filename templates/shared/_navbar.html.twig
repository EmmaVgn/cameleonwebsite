<nav class="navbar navbar-expand-lg {% if not isHomepage %}navbar-background{% endif %}">
	<div class="container-fluid">
		<a class="navbar-brand" href="{{ path('homepage') }}">
			<video autoplay loop muted playsinline class="logo-video">
				<source src="{{ asset('img/cameleon-logo-transparent.webm') }}" type="video/webm">
				<source src="{{ asset('img/cameleon-logo.mp4') }}" type="video/mp4">
			</video>
		</a>

		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarColor02">
			<ul class="navbar-nav mx-auto text-dark">
				<li class="nav-item">
					<a class="nav-link {% if app.request.attributes.get('_route') == 'homepage' %}active{% endif %}" href="{{ path('homepage') }}">
						{{ 'menu.home'|trans }}
						<span class="visually-hidden">(current)</span>
					</a>

				</li>
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link {% if app.request.attributes.get('_route') == 'services_index' %}active{% endif %}" href="{{ path('services_index') }}">
				{{ 'menu.services'|trans }}
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link {% if app.request.attributes.get('_route') == 'contact_index' %}active{% endif %}" href="{{ path('contact_index') }}">
				{{ 'menu.contact'|trans }}
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link {% if app.request.attributes.get('_route') == 'blog_index' %}active{% endif %}" href="{{ path('blog_display') }}">
				{{ 'menu.blog'|trans }}
			</a>
		</li>

	</ul>

	<!-- Drapeaux pour changer de langue -->
	<ul class="navbar-nav">
		<li class="nav-item">
			<a href="{{ path('change_language', {'lang': 'fr'}) }}" class="nav-link">
				<img src="{{ asset('img/fr_flag.jpg') }}" alt="Français" width="25" height="15">
			</a>
		</li>
		<li class="nav-item">
			<a href="{{ path('change_language', {'lang': 'en'}) }}" class="nav-link">
				<img src="{{ asset('img/en_flag.jpg') }}" alt="English" width="25" height="15">
			</a>
		</li>
	</ul>

	<ul class="navbar-nav">
		{% if app.user %}
			{% if is_granted('ROLE_ADMIN') %}
				<li class="nav-item">
					<a href="{{ path('admin') }}" class="nav-link">Administration</a>
				</li>
			{% endif %}
			<li class="nav-item active">
				<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
			</li>
		{% endif %}
	</ul>
</div></div></nav>
