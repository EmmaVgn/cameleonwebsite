{% extends 'base.html.twig' %}

{% block title %}Blog - Caméléon Solutions
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for article in articles %}
				<div class="col-md-3">
					<article class="post">
						<div class="article-v2">
							<figure class="article-thumb">
								<a href="{{ path('blog_show', {'id': article.id}) }}">
									<img src="{{ asset('images/' ~ article.image) }}" alt="{{ article.title }}"/>
								</a>
							</figure>
							<div class="article-content-main">
								<div class="article-header">
									<h2 class="entry-title">
										<a href="{{ path('blog_show', {'id': article.id}) }}">{{ article.title }}</a>
									</h2>
									<div class="entry-meta">
										<div class="entry-date">{{ article.publishedAt|date('F j, Y') }}</div>
									</div>
								</div>
								<div class="article-content">
									<p>{{ article.content|slice(0, 100) ~ '...' }}</p>
								</div>
								<div class="article-footer">
									<div class="row">
										<div class="col-6 text-left footer-link">
											<a href="{{ path('blog_show', {'id': article.id}) }}" class="more-link">Read More</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</article>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
