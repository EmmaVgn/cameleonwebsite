{% extends 'base.html.twig' %}

{% block title %}Les conseils de Marie
{% endblock %}

{% block body %}
	<main>
		<h1>Les conseils de Marie</h1>
		<hr>

		<section class="blog-listing gray-bg">
			<div class="container">
				<div class="row align-items-start">
					<div class="col-lg-8 m-15px-tb">
						<div class="row">
							{% for article in article %}
								<div class="col-sm-6">
									<div class="blog-grid">
										<div class="blog-img">
											<img src="{{ asset('img/blog/' ~ article.imageName) }}" alt="{{ article.name }}" class="img-fluid" width="400" height="200">
											<div class="date">
												<span>
													<div class="entry-date">{{ article.createdAt|date('F j, Y') }}</div>
												</span>
											</div>
										</div>
										<div class="blog-info">
											<h5>{{ article.name }}</h5>
											<p>{{ article.subtitle }}</p>
											<div class="btn-bar">
												<a href="{{ path('advise_show', {'slug': article.slug}) }}" class="custom-btn">
													Lire plus
												</a>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
{% endblock %}
