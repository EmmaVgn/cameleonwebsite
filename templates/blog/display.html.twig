{% extends 'base.html.twig' %}

{% block title %}
	{{ 'blog.title'|trans }}
{% endblock %}

{% block meta_keywords %}
	<meta name="keywords" content="{{ 'blog.meta_keywords'|trans }}">
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h1 class="text-center mb-5 display-4">{{ 'blog.main_title'|trans }}</h1>

		<div
			class="row mb-4">
			<!-- Colonne principale -->
			<div class="col-md-8">
				<div class="row justify-content-center">
					{% if articles|length == 0 %}
						<p class="text-center text-muted">{{ 'blog.no_articles'|trans }}</p>
					{% else %}
						{% for article in articles %}
							{% if article.slug %}
								<div class="col-lg-4 col-md-6 mb-4">
									<div class="card h-100 shadow-sm border-0 rounded-lg">
										<div class="card-img-top position-relative">
											<a href="{{ path('blog_show', {'slug': article.slug}) }}">
												<img src="{{ asset('img/blog/' ~ article.imageName) }}" alt="{{ article.getTranslatedName(app.request.locale)|e }}" class="img-fluid rounded-top" style="width: 100%; height: 300px; object-fit: cover;">
											</a>
										</div>
										<div class="card-body d-flex flex-column">
											<h5 class="card-title">
												<a href="{{ path('blog_show', {'slug': article.slug}) }}" class="text-decoration-none">
													{{ article.getTranslatedName(app.request.locale) }}
												</a>
											</h5>
											<p class="card-text text-muted">
												{{ article.getTranslatedSubtitle(app.request.locale)|slice(0, 120) ~ '...' }}
											</p>
											<div class="mt-auto text-center">
												<a href="{{ path('blog_show', {'slug': article.slug}) }}" class="btn-custom">
													{{ 'blog.read_more'|trans }}
												</a>
											</div>
										</div>
										<div class="card-footer text-center border-0">
											<small class="text-muted">
												{{ 'blog.published_on'|trans }}
												{{ article.createdAt|date('d M Y') }}
											</small>
										</div>
									</div>
								</div>
							{% endif %}
						{% endfor %}
					{% endif %}
				</div>

				<div class="d-flex justify-content-center mt-4">
					{{ knp_pagination_render(articles) }}
				</div>
			</div>

			<!-- Sidebar -->
			<div
				class="col-12 col-md-3 blog-content-display">
				<!-- Barre de recherche -->
				<form method="GET" action="{{ path('blog_search') }}" class="d-flex mb-4">
					<input type="text" name="q" class="form-control me-2" placeholder="{{ 'blog.search_placeholder'|trans }}" value="{{ app.request.get('q') }}">
					<button type="submit" class="btn-custom-blog">
						{{ 'blog.search_button'|trans }}
					</button>
				</form>

				<!-- Filtres par catÃ©gorie -->
				<div class="text-center mb-4">
					<p class="mb-2">{{ 'blog.filter_by_category'|trans }}</p>
					<div class="d-flex flex-wrap justify-content-center">
						{% for tag in tags %}
							<a href="{{ path('blog_by_tag', {'slug': tag.slug}) }}" class="badge" style="background-color: {{ tag.color }};">
								{{ tag.getTranslatedName(app.request.locale) }}
							</a>
						{% endfor %}
					</div>
				</div>

				<!-- Articles populaires -->
				<div>
					<h3 class="text-center mb-3">{{ 'blog.popular_articles'|trans }}</h3>
					<div class="row">
						{% for popularArticle in popularArticles %}
							<div class="col-12 mb-3">
								<div class="card border-0 shadow-sm">
									<div class="card-body">
										<h5 class="link-article">
											<a href="{{ path('blog_show', {'slug': popularArticle.slug}) }}">
												{{ popularArticle.getTranslatedName(app.request.locale)|e }}
											</a>
										</h5>
									</div>
								</div>
							</div>
						{% else %}
							<span class="text-muted">{{ 'blog.no_popular_articles'|trans }}</span>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
