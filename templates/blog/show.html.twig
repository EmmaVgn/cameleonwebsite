{% extends 'base.html.twig' %}

{% block title %}
	{{ article.name }}
	- Caméléon Solutions
{% endblock %}

{% block body %}
	<div class="container">
		<article class="post">
			<div class="article-v2">
				<figure class="article-thumb"></figure>
				<div class="article-content-main">
					<div class="article-header">
						<h2 class="entry-title">{{ article.name }}</h2>
						<div class="entry-meta">
							<div class="entry-date">{{ article.createdAt|date('F j, Y') }}</div>
						</div>
					</div>
					<div class="article-content">
						<p>{{ article.content }}</p>
					</div>
				</div>
			</div>
		</article>
	</div>
{% endblock %}
