		<div class="popup-content">
			<button class="close" type="button" aria-label="Fermer">Ã—</button>
			<h4 id="popup-title-{{ loop.index }}">{{ ('services.' ~ service ~ '.title')|trans }}</h4>
			<p>{{ ('services.' ~ service ~ '.popup_description')|trans|raw }}</p>
			<p class="popup-price">
				<b>{{ ('services.' ~ service ~ '.price')|trans }}</b>
			</p>
			<div class="contact-button-popup">
				<a href="/contact" class="btn btn-contact-popup">{{ 'services.contact'|trans }}</a>
			</div>
		</div>
	</div>
{% endfor %}
