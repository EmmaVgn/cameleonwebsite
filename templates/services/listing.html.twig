<div class="listing-container">
	<div
		class="timeline">

		<!-- Conception -->
		<div class="content-link" data-popup="popup1" data-hint="{{ 'services.more_info'|trans }}">
			<div class="content-box left" style="--index: 0;">
				<h4>{{ 'services.web_design.title'|trans }}</h4>
				<p>{{ 'services.web_design.description'|trans|raw }}</p>
			</div>
		</div>

		<!-- Community Manager -->
		<div class="content-link" data-popup="popup2" data-hint="{{ 'services.more_info'|trans }}">
			<div class="content-box right" style="--index: 1;">
				<h4>{{ 'services.computer_courses.title'|trans }}</h4>
				<p>{{ 'services.computer_courses.description'|trans|raw }}</p>
			</div>
		</div>


		<!-- Formations et coaching -->
		<div class="content-link" data-popup="popup3" data-hint="{{ 'services.more_info'|trans }}">
			<div class="content-box left" style="--index: 2;">
				<h4>{{ 'services.training.title'|trans }}</h4>
				<br>
				<p>{{ 'services.training.description'|trans|raw }}</p>

			</div>
		</div>
	</div>
</div>

<!-- Pop-ups -->
{% for service in ['web_design', 'computer_courses', 'training', 'admin'] %}

	<div id="popup{{ loop.index }}" class="popup">
		<div class="popup-content">
			<span class="close">&times;</span>
			<h4>{{ ('services.' ~ service ~ '.title')|trans }}</h4>
			<p>{{ ('services.' ~ service ~ '.popup_description')|trans|raw }}</p>
			<p class="popup-price">
				<b>{{ ('services.' ~ service ~ '.price')|trans }}</b>
			</p>
			<div class="contact-button-popup">
				<a href="/contact">
					<button class="contact-button-popup">{{ 'services.contact'|trans }}</button>
				</a>
			</div>
		</div>
	</div>
{% endfor %}
